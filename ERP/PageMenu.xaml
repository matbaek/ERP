        <Button x:Name="ButtonCustomer" Content="Kunder" HorizontalAlignment="Left" Margin="255,220,0,0" VerticalAlignment="Top" Width="380" Click="ButtonCustomer_Click" Height="40"/>
        <Button x:Name="ButtonOrder" Content="Ordre" HorizontalAlignment="Left" Margin="255,310,0,0" VerticalAlignment="Top" Width="380" Click="ButtonOrder_Click" Height="40" IsEnabled="false"/>
        <Button x:Name="ButtonAccounting" Content="Regnskab" HorizontalAlignment="Left" Margin="255,400,0,0" VerticalAlignment="Top" Width="380" Click="ButtonAccounting_Click" Height="40" IsEnabled="false"/>
